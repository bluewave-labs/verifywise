{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/scenario.schema.json",
  "title": "Scenario",
  "type": "object",
  "additionalProperties": false,
  "required": ["scenario_id", "scenario_type", "prompt", "risk_level", "expected_behavior"],
  "properties": {
    "scenario_id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z0-9._-]+$"
    },
    "scenario_type": {
      "type": "string",
      "enum": ["compliance_policy", "ambiguous_prompt", "multi_step_reasoning"]
    },
    "prompt": {
      "type": "string",
      "minLength": 1
    },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "expected_behavior": {
      "type": "object",
      "additionalProperties": false,
      "required": ["must", "must_not"],
      "properties": {
        "must": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "default": []
        },
        "must_not": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "default": []
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    }
  }
}
