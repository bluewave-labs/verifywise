# Database Server Configuration (docker-compose.db.yml)
DB_USER=verifywise
DB_PASSWORD=your_secure_password_here
DB_NAME=verifywise_gateway

# Gateway Server Configuration (docker-compose.gateway.yml)
GATEWAY_ID=gateway-prod-1
DATABASE_URL=postgresql://verifywise:your_secure_password_here@db-server.example.com:5432/verifywise_gateway
VERIFYWISE_URL=https://dashboard.verifywise.ai

# Security Configuration
# Secret for authenticating internal API calls (config push, queue flush)
# Generate with: openssl rand -base64 32
INTERNAL_API_SECRET=your_internal_api_secret_here

# CORS Configuration
# Comma-separated list of allowed origins (leave empty for development/all origins)
ALLOWED_ORIGINS=https://dashboard.verifywise.ai,https://admin.verifywise.ai

# Request timeout in milliseconds (default: 120000 = 2 minutes)
REQUEST_TIMEOUT_MS=120000
