{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/candidate.schema.json",
  "title": "CandidateAnswer",
  "type": "object",
  "additionalProperties": false,
  "required": ["scenario_id", "answer_id", "answer_text", "label"],
  "properties": {
    "scenario_id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z0-9._-]+$"
    },
    "answer_id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z0-9._-]+$"
    },
    "answer_text": {
      "type": "string",
      "minLength": 1
    },
    "label": {
      "type": "string",
      "enum": ["good", "risky", "bad"]
    },
    "violation_tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "default": []
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    }
  }
}
