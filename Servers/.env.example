# VerifyWise Server Environment Configuration Template
# Copy this file to .env and fill in your actual values
#
# SECURITY NOTICE:
# - NEVER commit .env files to version control
# - Use strong, randomly generated secrets in production
# - Rotate secrets regularly

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password
DB_NAME=verifywise
DB_HOST=localhost
DB_PORT=5432
DB_SSL=true
REJECT_UNAUTHORIZED=true

# =============================================================================
# JWT AUTHENTICATION SECRETS
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_64_CHAR_HEX_STRING_FOR_PRODUCTION
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_DIFFERENT_SECURE_RANDOM_64_CHAR_HEX_STRING

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=production
BACKEND_URL=https://your-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# =============================================================================
# OUTBOX EVENT SYSTEM
# =============================================================================
ENABLE_OUTBOX_PROCESSING=true

# =============================================================================
# TENANT SECURITY CONFIGURATION
# =============================================================================
# Generate with: openssl rand -base64 32
TENANT_HASH_SALT=CHANGE_THIS_TO_SECURE_RANDOM_SALT_FOR_PRODUCTION
TENANT_ENTROPY_SOURCE=CHANGE_THIS_TO_UNIQUE_STRING_FOR_YOUR_DEPLOYMENT

# =============================================================================
# SSO CONFIGURATION
# =============================================================================
# Generate with: openssl rand -hex 32
SSO_STATE_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_64_CHAR_HEX_STRING
# Generate with: openssl rand -hex 16
SSO_ENCRYPTION_KEY=CHANGE_THIS_TO_SECURE_32_CHAR_HEX_STRING

# =============================================================================
# REDIS CONFIGURATION (for caching and rate limiting)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_if_required

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# JSON array of allowed origins - adjust for your domains
ALLOWED_ORIGINS=["https://your-frontend-domain.com"]

# =============================================================================
# EMAIL SERVICE CONFIGURATION (if using email notifications)
# =============================================================================
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# SMTP_HOST=your-smtp-host.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASSWORD=your-smtp-password

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# LOG_LEVEL=info
# MONITORING_ENDPOINT=https://your-monitoring-service.com/webhook
# SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id

# =============================================================================
# SECURITY HEADERS AND RATE LIMITING
# =============================================================================
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100
# SECURITY_HEADERS_ENABLED=true

# =============================================================================
# DEVELOPMENT ONLY (remove in production)
# =============================================================================
# DEBUG=verifywise:*
# ENABLE_API_DOCS=false