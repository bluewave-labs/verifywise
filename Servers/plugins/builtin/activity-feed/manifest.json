{
  "id": "activity-feed",
  "name": "Activity feed",
  "description": "Tracks and displays recent activity across your VerifyWise instance. Shows project, risk, task, and vendor changes in a live feed.",
  "version": "1.0.0",
  "author": "VerifyWise",
  "authorUrl": "https://verifywise.ai",
  "type": "feature",
  "permissions": [
    "events:listen",
    "database:read",
    "database:write"
  ],
  "config": {
    "maxActivities": {
      "type": "number",
      "default": 50,
      "min": 10,
      "max": 200,
      "description": "Maximum number of activities to store"
    }
  },
  "ui": {
    "dashboardWidgets": [
      {
        "id": "activity-feed-widget",
        "template": "activity-feed",
        "title": "Recent activity",
        "endpoint": "/activities",
        "config": {
          "maxItems": 10,
          "showTimestamp": true,
          "showAvatar": true
        }
      }
    ]
  }
}
